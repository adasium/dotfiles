scanner {
  Exec("pamixer --get-volume") {
    Volume= Grab()
  }
}

layout {
  style = "frame"
  css = "* { border: none; box-shadow: none; }"
  label {
    interval = 50
    css = "* { font: 0.3cm Fira Code; font-weight: 700; -GtkWidget-vexpand: true; -GtkWidget-hexpand: true; -GtkWidget-align: 0.5;  }"
    value = Volume
  }
}