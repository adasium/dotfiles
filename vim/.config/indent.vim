" General:
set ts=4 sw=4 sts=4 expandtab smarttab autoindent smartindent
" C++:
autocmd FileType c,h,cpp,hpp set tabstop=4 shiftwidth=4 softtabstop=4 expandtab smarttab
" Python:
autocmd FileType python :setlocal sw=4 ts=4 sts=4 expandtab
" HTML, Django:
autocmd FileType html,css,htmldjango :setlocal sw=4 ts=4 sts=4
" JavaScript
autocmd FileType javascript.jsx :setlocal sw=4 ts=4 sts=4
